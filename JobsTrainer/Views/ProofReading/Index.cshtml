        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sample)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sentiment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
